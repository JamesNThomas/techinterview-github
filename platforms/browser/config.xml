<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.helloworld" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>GitHub Public Events Feed</name>
    <description>
        A basic WebApp to display the 30 most recent GitHub "public events." 
        With the Framework7 HTML5 framework and PhoneGap, it can be easily compiled for both Android and iOS, as well.
    </description>
    <author email="JamesNThomas42@gmail.com" href="https://github.com/JamesNThomas">
        James N. Thomas
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
</widget>
